<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<Dialog id="imageDialog" class="sapUiContentPadding" title="Image Preview">
		<content>
			<Title text="{Fileame}" class="sapUiSmallMarginBottom"/>
			<Image src="{content}" alt="{Filename}" tooltip="{Filename}" press="onPressImage"/>
		</content>
		<beginButton>
			<Button text="Remove" press="onPressRemoveImage" type="Reject"/>
		</beginButton>
		<endButton>
			<Button text="Close" type="Transparent"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>